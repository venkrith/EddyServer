extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Command:
      input#name.form-control(type='text', placeholder='Command will be excuted on the Server' name='name' value=(undefined===filename ? '' : filename.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
