extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Data Read:
      input#name.form-control(type='text', placeholder='Data from write.txt on the Server will appear here' name='name' value=(undefined===readname ? '' : readname.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
