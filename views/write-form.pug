extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Data to write:
      input#name.form-control(type='text', placeholder='Data will be saved in write.txt on Server' name='name' value=(undefined===writename ? '' : writename.name))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
